@model IEnumerable<ToDoListApp.Models.ToDo>

<div id="progressBar">
    <p>@(ViewBag.percent)%</p>
    <div class="progress">
        <div class="progress-bar" role="progressbar"
             style="width:@(Html.AttributeEncode(ViewBag.Percent))%"></div>
    </div>
</div>
     
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCompleted)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!item.IsCompleted)
                {
                    @Html.DisplayFor(modelItem => item.Description)
                }
                else
                {
                <div class=" CompletedToDo">@Html.DisplayFor(modelItem => item.Description)</div>
                }

            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.IsCompleted, new { id = item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details","Details", new { id = item.Id})|
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<script src="~/Custom_Scripts/CheckBoxListener.js"></script>